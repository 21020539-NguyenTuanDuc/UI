<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#16417C</item>
        <item name="colorPrimaryVariant">#16417C</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:textViewStyle">@style/AlegreyTextViewStyle</item>
        <item name="android:editTextStyle">@style/oldstandar_regularEditTextStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlegreyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/alegrey</item>
    </style>

    <style name="oldstandar_regularEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/oldstandar_regular</item>
    </style>

    <style name="RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/brown_gradient</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/brown_gradient</item>
    </style>
</resources>