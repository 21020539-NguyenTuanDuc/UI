<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TicketHandler.SuccessPaymentActivity">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/tick_icon" />

    <TextView
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:text="@string/payment_success"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/transactionID"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="@string/transaction_id"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/amount"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="@string/amount_paid"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/zaloPay"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="@string/paid_with_zalopay"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/homeScreenButton"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="@string/home_screen"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content" />


</LinearLayout>