<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/quiz_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/brown_gradient"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quiz_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/youngserif"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:text="ViewPager lets you swipe left or right on a specific area. It consists of images, texts, and buttons. It provides you with different views in a constant"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:paddingBottom="50dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp">

            <RelativeLayout
                android:id="@+id/rl_answer_a"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_answer_item">

                <TextView
                    android:id="@+id/quiz_answer_a"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/yellow_circle"
                    android:fontFamily="@font/youngserif"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quiz_answer_a_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/quiz_answer_a"
                    android:fontFamily="@font/philo_bold"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="In order to use an icon you must attribute it to its author."
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_answer_b"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_answer_item">

                <TextView
                    android:id="@+id/quiz_answer_b"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/yellow_circle"
                    android:fontFamily="@font/youngserif"
                    android:gravity="center"
                    android:text="B"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quiz_answer_b_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/quiz_answer_b"
                    android:fontFamily="@font/philo_bold"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Supaya lebih cepat sampai di tempat tujuan, orang "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_answer_c"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_answer_item">

                <TextView
                    android:id="@+id/quiz_answer_c"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/yellow_circle"
                    android:fontFamily="@font/youngserif"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quiz_answer_c_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/quiz_answer_c"
                    android:fontFamily="@font/philo_bold"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="In order to use an icon you must attribute it to its author."
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_answer_d"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_answer_item">

                <TextView
                    android:id="@+id/quiz_answer_d"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/yellow_circle"
                    android:fontFamily="@font/youngserif"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quiz_answer_d_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/quiz_answer_d"
                    android:fontFamily="@font/philo_bold"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="In order to use an icon you must attribute it to its author."
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>
<!--    </ScrollView>-->

</LinearLayout>