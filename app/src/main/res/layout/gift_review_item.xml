<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/bg_grey">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/gift_review_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="7dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/img_gift"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_img" />

            <TextView
                android:id="@+id/txt_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_gift"
                android:layout_marginLeft="15dp"
                android:text="Móc khóa lần đầu tiên trái thanh long có trong mỳ tôm"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_gift_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/img_gift"
                android:layout_marginLeft="15dp"
                android:text="600"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_monetization_on_24"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_gift_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentBottom="true"
                android:text="Đã đổi"
                android:textStyle="bold"
                android:background="@drawable/bg_review_gift"
                android:paddingHorizontal="10dp"
                android:textSize="17sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>